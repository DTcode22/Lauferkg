  <style>
    .footer {
      position: relative;
      background-image: url('/footer-bg.avif');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      color: white;
      padding: 3rem 1rem;
      z-index: 0;
      overflow: hidden;
    }

    .footer::before {
      content: '';
      position: absolute;
      inset: 0;
      background: rgba(7, 12, 38, 0.7);
      backdrop-filter: blur(0.8px) saturate(80%) grayscale(40%);
      z-index: 1;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .footer-grid {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
      position: relative;
      z-index: 2;
      justify-items: center;
    }

    @media (max-width: 768px) {
      .footer-grid {
        grid-template-columns: 1fr;
        justify-items: unset;
      }
    }

    .company-info .logo {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .logo img {
      height: 10rem;
      width: 12rem;
      rotate: -10deg;
      width: auto;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.33);
    }

    .logo span {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .company-description {
      color: #e5e5e5;
      color: #d1d1d1;
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .license-badge {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #fbbf24;
    }

    h3 {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 1rem;
    }
    p {
      display: flex;
      align-items: center;
    }
    .quick-links {
      padding: 20px 20px;
    }
    .navlinks {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .contact-info {
      display: flex;
      flex-direction: column;
      padding: 20px 0px;
    }
    .quick-links a,
    .contact-info a,
    .legal-links a {
      color: #d1d1d1;
      text-decoration: none;
      transition: color 0.2s;
    }

    .quick-links a:hover,
    .contact-info a:hover,
    .legal-links a:hover {
      color: white;
    }

    .contact-details p {
      display: flex;
      gap: 0.5rem;
      color: #d1d1d1;
    }
    .contact-details {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .newsletter p {
      color: #d1d1d1;
      margin-bottom: 1rem;
    }

    .newsletter form {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .newsletter input {
      border-radius: 0.25rem;
      background-color: rgba(255, 255, 255, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.4);
      color: white;
      padding: 0.5rem;
    }

    .newsletter input:focus {
      outline: none;
      border-color: #fbbf24;
    }

    .newsletter button {
      padding: 0.75rem 1.25rem;
      background-color: #fbbf24;
      color: black;
      border: none;
      border-radius: 0.25rem;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .newsletter button:hover {
      background-color: #f59e0b;
    }

    .bottom-bar {
      max-width: 1200px;
      margin: 3rem auto 0;
      padding-top: 2rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
      position: relative;
      z-index: 2;
    }

    @media (max-width: 768px) {
      .bottom-bar {
        flex-direction: column;
        text-align: center;
      }
      .social-links,
      .legal-links {
        justify-content: center;
      }
    }

    .social-links {
      display: flex;
      gap: 1rem;
    }

    .social-links a {
      color: #d1d1d1;
      text-decoration: none;
      transition: color 0.2s;
    }

    .social-links a:hover {
      color: white;
    }

    .legal-links {
      display: flex;
      gap: 1rem;
    }

    .legal-links a {
      font-size: 0.875r;
    }
  </style>
</footer>
