---
import { Image } from 'astro:assets';
import Logo from '../../public/nav-logo.png';
---

<header class="header">
  <div class="content-container">
    <a class="logo" href="/"
      ><Image src={Logo} alt="Logo" width={120} height={60} id="logo" /></a
    >

    <!-- Hamburger Menu Button -->
    <button class="hamburger" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <!-- Navigation Links -->
    <div class="nav-content">
      <div class="links">
        <a href="/services" class="services">Servisi</a>
        <a href="/about" class="about">O nama</a>
        <a href="/contact" class="contact">Kontakt</a>
      </div>
    </div>

    <div class="cta-button">
      <div class="overlay"></div>
      <a href="/contact" class="custom-button">
        <svg
          class="icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12h6m2 8H7a2 2 0 01-2-2V7a2 2 0 012-2h10a2 2 0 012 2v11a2 2 0 01-2 2z"
          ></path>
        </svg>
        <span class="label">Zakazi termin</span>
      </a>
    </div>
  </div>
</header>

<style>
  /* Outer header spans the full width */
  .header {
    width: 100%;
    /* background-color: #2c3149; */
    background-color: #182047;
    position: relative;
    z-index: 1000; /* Ensure header is above other content */
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  /* Inner container centers content with max-width */
  .content-container {
    max-width: 1440px;
    margin: 0 auto;
    height: 80px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 10%;
    color: #d1d5db;
    position: relative;
  }
  .logo {
    /* font-size: 1rem; */
    z-index: 10000;
    /* padding: 20px; */
    align-self: end;
  }
  .links {
    display: flex;
    gap: 1rem;
  }
  .logo:hover,
  .home:hover,
  .services:hover,
  .about:hover,
  .contact:hover {
    color: white;
  }

  .home,
  .services,
  .about,
  .contact {
    color: #d1d5db;
    text-decoration: none;
    padding: 6px 12px;
    cursor: pointer;
  }

  a {
    all: unset;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }

  .custom-button {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    background: linear-gradient(to right, #f6ae33, #f7c23a);
    color: #2c3149;

    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    max-width: 200px;
  }

  .custom-button:hover {
    box-shadow: 0 8px 15px -8px rgba(245, 158, 11, 0.5);
    transform: translateY(-2px);
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .custom-button:hover .overlay {
    opacity: 1;
  }

  .icon {
    width: 1rem;
    height: 1rem;
    margin-right: 0.2rem;
  }

  .label {
    font-weight: 600;
  }

  /* Hamburger Menu Styles */
  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 24px;
    position: relative;
    z-index: 1002; /* Above the nav-content */
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #d1d5db;
    margin: 5px 0;
    transition: all 0.2s ease;
  }

  .nav-content {
    z-index: 10000; /* Above other content but below hamburger */
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .nav-content {
      position: absolute;
      top: 100%;
      right: 0;
      width: 100%;
      background-color: #2c3149;
      padding: 1rem;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      z-index: 1001; /* Above other content but below hamburger */
    }

    .nav-content.active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .links {
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .links a {
      width: 100%;
      padding: 0.5rem 0;
      display: flex;
      justify-content: center;
      border-bottom: 1px solid rgba(209, 213, 219, 0.1);
    }

    .links a:last-child {
      border-bottom: none;
    }

    .home,
    .services,
    .about,
    .contact {
      color: #d1d5db;
      padding: 6px 12px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    /* Hamburger Animation */
    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    .cta-button {
      text-align: center;
    }

    .custom-button {
      width: 100%;
      justify-content: center;
      max-width: none;
    }

    .cta-button {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.querySelector('.hamburger');
    const navContent = document.querySelector('.nav-content');

    if (hamburger) {
      hamburger.addEventListener('click', (e) => {
        e.stopPropagation();
        hamburger.classList.toggle('active');
        if (navContent) {
          navContent.classList.toggle('active');
        }
      });

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (
          navContent &&
          !navContent.contains(e.target) &&
          !hamburger.contains(e.target)
        ) {
          hamburger.classList.remove('active');
          navContent.classList.remove('active');
        }
      });
    }
  });
</script>
