  <script>
    // Client-side JavaScript for interactivity

    const hoursValue = document.querySelector('.hours-display');
    const decreaseButton = document.querySelector('.decrease-hours');
    const increaseButton = document.querySelector('.increase-hours');
    const withCarButton = document.querySelector('.with-car-button');
    const withoutCarButton = document.querySelector('.without-car-button');

    let hours = 10;
    let withCar = true;

    function updatePrice() {
      const basePrice = withCar ? 80 : 60;
      const total = basePrice * hours;
      const bdePriceElement = document.querySelector('.bde-price');
      if (bdePriceElement) {
        bdePriceElement.textContent = `$${total}`;
      }
    }

    if (decreaseButton && increaseButton) {
      decreaseButton.addEventListener('click', () => {
        if (hours > 10) {
          hours--;
          if (hoursValue) {
            hoursValue.textContent = `${hours} hours`;
          }
          updatePrice();
        }
      });

      increaseButton.addEventListener('click', () => {
        if (hours < 50) {
          hours++;
          if (hoursValue) {
            hoursValue.textContent = `${hours} hours`;
          }
          updatePrice();
        }
      });
    }

    if (withCarButton && withoutCarButton) {
      withCarButton.addEventListener('click', () => {
        withCar = true;
        withCarButton.classList.add('active');
        withoutCarButton.classList.remove('active');
        updatePrice();
      });

      withoutCarButton.addEventListener('click', () => {
        withCar = false;
        withoutCarButton.classList.add('active');
        withCarButton.classList.remove('active');
        updatePrice();
      });
    }
  </script>
