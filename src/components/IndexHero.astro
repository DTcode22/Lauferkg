---
import testimonials from '../data/testimonials';
---

<section class="hero">
  <div class="hero__background"></div>
  <div class="hero__content">
    <div class="tag">
      <span class="tag__star">★</span>
      <span class="tag__text">#1 Auto Škola</span>
    </div>

    <h1 class="hero__title">
      Vozite sa
      <span class="highlight">Samopouzdanjem</span>
      <br />
      Učite sa <span class="highlight">Laufer</span>
    </h1>

    <div class="benefits">
      <div class="benefit">
        <div class="benefit__check">✓</div>
        <p>100% online jednostavno zakazivanje</p>
      </div>
      <div class="benefit">
        <div class="benefit__check">✓</div>
        <p>Najbolje ocenjeni instruktori koji brinu o vašem uspehu</p>
      </div>
      <div class="benefit">
        <div class="benefit__check">✓</div>
        <p>Do 20% popusta na auto osiguranje sa našim kursom za početnike</p>
      </div>
    </div>

    <div class="testimonials">
      <div class="testimonials__avatars">
        {
          testimonials
            .slice(0, 4)
            .map((testimonial) => (
              <img
                src={testimonial.avatar}
                alt={testimonial.name}
                class="testimonials__avatar"
              />
            ))
        }
      </div>
      <p class="testimonials__text">
        Veruje nam <span class="highlight">1000+</span> studenata
      </p>
    </div>

    <a href="/contact" class="cta">Kontaktirajte nas</a>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 80vh;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 2rem;
    background-color: #000; /* Fallback color */
  }
  .hero__background::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 40%;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    pointer-events: none;
    z-index: 1;
  }
  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/hero1.webp');
    background-size: cover;
    background-position: center;
    filter: brightness(0.4);
    z-index: 0;
    overflow: hidden; /* Add this to contain the gradient */
  }

  .hero__content {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    width: 80%;
    z-index: 1;
    background: rgba(255, 255, 255, 0.16);
    backdrop-filter: blur(2px);
    color: white;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-radius: 20px;
    padding: 1rem;
  }

  /* Rest of the styles remain the same */
  .tag {
    display: inline-flex;
    align-items: center;
    gap: 0.2rem;
    border-radius: 2rem;
    margin-bottom: 1rem;
  }

  .tag__star {
    color: #d7b817;
  }

  .hero__title {
    font-size: clamp(1.5rem, 4vw, 4rem);
    line-height: 1;
    font-weight: 700;
    margin: 0;
  }

  .highlight {
    color: #d7b817;
  }

  .benefits {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 600px;
  }

  .benefit {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .benefit__check {
    background: #d7b817;
    color: black;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-weight: bold;
  }

  .testimonials {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .testimonials__avatars {
    display: flex;
  }

  .testimonials__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid white;
    margin-left: -0.75rem;
  }

  .testimonials__avatar:first-child {
    margin-left: 0;
  }

  .cta {
    display: inline-block;
    background: #d7b817;
    color: #1c2030;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease;
    align-self: flex-start;
  }

  .cta:hover {
    transform: translateY(-2px);
  }
  @media (max-width: 768px) {
    .hero__content {
      width: 100%;
    }
  }
</style>
